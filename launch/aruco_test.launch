<launch>
    <node pkg="libuvc_camera" type="camera_node" name="uvc_camera" ns="primary_camera">
        <param name="camera_info_url" value="file://$(find adns_robot)/config/logitech_webcam_parameters.yaml" />

        <param name="index" value="0"/>

        <!-- Image size and type -->
        <param name="width" value="640"/>
        <param name="height" value="480"/>
        <!-- choose whichever uncompressed format the camera supports: -->
        <param name="video_mode" value="yuyv"/> <!-- or yuyv/nv12/mjpeg -->
        <param name="frame_rate" value="30"/>

        <param name="timestamp_method" value="start"/> <!-- start of frame -->
        <param name="camera_info_url" value="file:///tmp/cam.yaml"/>

        <param name="auto_exposure" value="3"/> <!-- use aperture_priority auto exposure -->
        <param name="auto_white_balance" value="false"/>
    </node>
    <node pkg="image_view" type="image_view" name="debug_image_view" args="image:=/fiducial_images" />
    <node pkg="image_proc" type="image_proc" name="rectify" ns="primary_camera" />
    <node pkg="aruco_detect" type="aruco_detect" name ="aruco_detect">
        <param name="dictionary" value="8" />
        <param name="fiducial_len" value="0.10" />
        <param name="publish_images" value="true" />
        <remap from="/camera" to="/primary_camera/image_rect" />
        <remap from="/camera_info" to="/primary_camera/camera_info" />
    </node>
</launch>